<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.SetMealMapper">

    <!--新增套餐-->
    <insert id="add" parameterType="com.example.pojo.Setmeal">
        <selectKey order="AFTER" resultType="int" keyProperty="id">
            select LAST_INSERT_ID()
        </selectKey>
        insert into t_setmeal
        (name,code,helpCode,sex,age,price,img,remark,attention)
        values
        (#{name},#{code},#{helpCode},#{sex},#{age},#{price},#{img},#{remark},#{attention})
    </insert>
    <!--设置套餐和检查组的关联关系-->
    <insert id="setSetMealAndCheckGroups" parameterType="map">
        insert into t_setmeal_checkgroup(setmeal_id,checkgroup_id)
        values
        (#{setMealId},#{checkGroupId})
    </insert>
    <!--分页查询-->
    <select id="selectByCondition" parameterType="string" resultType="com.example.pojo.Setmeal">
        select * from t_setmeal
        <if test="value != null and value != '' ">
            where code = #{value} or name = #{value} or helpCode = #{value}
        </if>
    </select>

    <!--查找套餐关联的检查组的id-->
    <select id="selectCheckGroupIdsBySetMealId" parameterType="int" resultType="int">
        select checkgroup_id from t_setmeal_checkgroup where setmeal_id = #{id}
    </select>

    <!--删除原有的关联检查组id-->
    <delete id="deleteCheckGroupIdsBySetMealId" parameterType="int">
        delete from t_setmeal_checkgroup where setmeal_id = #{id}
    </delete>

    <!--编辑套餐-->
    <update id="update" parameterType="com.example.pojo.Setmeal">
        update t_setmeal
        <set>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="helpCode != null">
                helpCode = #{helpCode},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="img != null">
                img = #{img},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="attention != null">
                attention = #{attention},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--删除套餐-->
    <delete id="deleteSetMealById" parameterType="int">
        delete from t_setmeal where id = #{id}
    </delete>

    <!--查询全部套餐-->
    <select id="selectAll" resultType="com.example.pojo.Setmeal">
        select * from t_setmeal
    </select>


</mapper>