<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.CheckItemMapper">

    <!--根据id查询-->
    <select id="selectById" parameterType="java.lang.Integer" resultType="com.example.pojo.CheckItem">
        select * from t_checkitem where id = #{id}
    </select>

    <!--更新单个检查项-->
    <update id="update" parameterType="com.example.pojo.CheckItem">
        update t_checkitem
        <set>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="attention != null">
                attention = #{attention},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--添加检查项-->
    <insert id="insert" parameterType="com.example.pojo.CheckItem">
        insert into
        t_checkitem(code,name,sex,age,price,type,remark,attention)
        values
        (#{code},#{name},#{sex},#{age},#{price},#{type},#{remark},#{attention})
    </insert>

    <!--删除检查项-->
    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from t_checkitem where id = #{id}
    </delete>
    <!--根据检查项id查询其关联检查组数量-->
    <select id="findCountByCheckItemId" parameterType="java.lang.Integer" resultType="java.lang.Long">
        select count(*) from t_checkgroup_checkitem where checkitem_id = #{id}
    </select>

    <!--分页查询-->
    <select id="selectByCondition" parameterType="java.lang.String" resultType="com.example.pojo.CheckItem">
        select * from t_checkitem
        <if test="value != null and value != '' ">
            where code = #{value} or name = #{value}
        </if>
    </select>

    <!--查询所有检查项-->
    <select id="findAll" resultType="com.example.pojo.CheckItem">
        select * from t_checkitem
    </select>
</mapper>